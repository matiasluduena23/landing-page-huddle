---
import ContactInfo from '../components/ContactInfo.astro';
import SocialIcon from '../components/SocialIcon.astro';
import Button from './Button.astro';
import logo from '../assets/logoLight.svg';
---

<footer>
    <div class="container">
        <div class="card-ready">
            <h2>Ready To Build Your Community?</h2>
            <Button />
        </div>
        <div class="wrap-logo">
            <img src={logo.src} alt="logo" />
        </div>
        <section class="grid-auto">
            <ContactInfo />
            <div class="list-items">
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">What We Do</a></li>
                    <li><a href="#">FAQ</a></li>
                </ul>
                <ul>
                    <li><a href="#">Career</a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <SocialIcon />
        </section>
        <p class="copyright">
            &copy; Copyright 2018 Huddle. All rights reserved.
        </p>
    </div>
</footer>

<style>
    footer {
        background-color: var(--very-dark-cyan);
        color: var(--very-pale-cyan);
        padding-block: 5rem;
        margin-top: 15rem;
    }

    .card-ready {
        background-color: white;
        padding: 3rem 1rem;
        text-align: center;
        border-radius: 10px;
        margin-top: -13rem;
        box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin-inline: auto;
    }

    .wrap-logo {
        margin-top: 5rem;
    }

    section {
        align-items: start;
        gap: 4rem;
        padding-block: 2rem;
    }

    h2 {
        font-size: 1.1rem;
        color: var(--very-dark-cyan);
        margin-bottom: 2rem;
    }

    a {
        color: var(--very-pale-cyan);
        position: relative;
    }

    a::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--very-pale-cyan);
        transform: scaleX(0);
        transition: transform 200ms ease-in-out;
    }

    a:hover::before {
        transform: scaleX(1);
    }

    li {
        margin-bottom: 1rem;
    }

    .copyright {
        font-size: 12px;
        text-align: center;
        margin-top: 1rem;
    }

    @media (min-width: 768px) {
        .list-items {
            display: flex;
            gap: 4rem;
        }

        section {
            justify-content: start;
        }

        .copyright {
            text-align: end;
        }
    }
</style>
